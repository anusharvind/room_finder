<p id="notice"><%= notice %></p>

<h1>Listing Room Requests</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>No of peoples</th>
      <th>Moved</th>
      <th>User</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_requests.each do |room_request| %>
      <tr>
        <td><%= room_request.status %></td>
        <td><%= room_request.no_of_peoples %></td>
        <td><%= room_request.moved %></td>
        <td><%= room_request.user %></td>
        <td><%= room_request.room %></td>
        <td><%= link_to 'Show', room_request %></td>
        <td><%= link_to 'Edit', edit_room_request_path(room_request) %></td>
        <td><%= link_to 'Destroy', room_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

