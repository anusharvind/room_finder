<p id="notice"><%= notice %></p>

<h1>Listing Room Rules</h1>

<table>
  <thead>
    <tr>
      <th>Veg only</th>
      <th>Smoking allowed</th>
      <th>Alcohol allowed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_rules.each do |room_rule| %>
      <tr>
        <td><%= room_rule.veg_only %></td>
        <td><%= room_rule.smoking_allowed %></td>
        <td><%= room_rule.alcohol_allowed %></td>
        <td><%= link_to 'Show', room_rule %></td>
        <td><%= link_to 'Edit', edit_room_rule_path(room_rule) %></td>
        <td><%= link_to 'Destroy', room_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

