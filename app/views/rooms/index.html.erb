<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>


<style>
table {
 border:0;
}

table td, table th {
    border: none;
    border-collapse: collapse;
}

</style>
<table width="80%">
  <thead>
    <tr>
      <th>Name</th>
      <th style="padding-left: 5px">Area</th>
      <th style="padding-left: 5px">Prefers</th>
      <th style="padding-left: 5px">Vacancy</th>
      <th style="padding-left: 5px">Total rent</th>
      <th style="padding-left: 5px">Expected rent</th>
      <th style="padding-left: 5px">Host</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <% if(@requested_for) then %>
          <td><%= link_to room.name, "rooms/#{room.id}?number=#{@requested_for}" %></td>
        <% else %>
          <td><%= link_to room.name, room %></td>
        <% end %>
        <td style="padding-left: 5px"><%= room.area %></td>
        <td style="padding-left: 5px"><%= room.gender_preference %></td>
        <td style="padding-left: 5px"><%= room.current_vacancy %></td>
        <td style="padding-left: 5px"><%= room.total_rent %></td>
        <td style="padding-left: 5px"><%= room.expected_rent %></td>
        <td style="padding-left: 5px"><%= link_to User.find(room.user_id).name, User.find(room.user_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
