<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>


<style>
table {
 border:0;
}

table td, table th {
    border: none;
    border-collapse: collapse;
}

</style>
<table width="80%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Area</th>
      <th>Gender preference</th>
      <th>Total rent</th>
      <th>Expected rent</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.area %></td>
        <td><%= room.gender_preference %></td>
        <td><%= room.visibility %></td>
        <td><%= room.total_rent %></td>
        <td><%= room.expected_rent %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

